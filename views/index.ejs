<%- include("partials/header"); %>

<div class="ui main text container">
    <div class="ui huge header">Elder Scrolls Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(blog => { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span>Post created on <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p>
                                <% if(blog.body.length > 100) { %>
                                    <%- blog.body.substring(0,100) %>...
                                <% } else { %>
                                    <%- blog.body %>
                                <% } %>
                            </p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic button" href="/blogs/<%= blog._id %>">
                                Read More<i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include("partials/footer"); %>